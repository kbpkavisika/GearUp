<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_white"
    android:padding="16dp">

    <!-- Today's Mood Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mood_entry_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/background_light"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_mood_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/mood_today"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Emoji Selector Grid -->
            <GridLayout
                android:id="@+id/emoji_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="4"
                android:orientation="horizontal"
                android:rowCount="2">

                <Button
                    android:id="@+id/btn_very_happy"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_columnWeight="1"
                    android:text="@string/mood_very_happy"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_happy"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_columnWeight="1"
                    android:text="@string/mood_happy"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_neutral"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_columnWeight="1"
                    android:text="@string/mood_neutral"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_excited"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_columnWeight="1"
                    android:text="@string/mood_excited"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_sad"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_columnWeight="1"
                    android:text="@string/mood_sad"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_angry"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_columnWeight="1"
                    android:text="@string/mood_angry"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_tired"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_columnWeight="1"
                    android:text="@string/mood_tired"
                    android:textSize="24sp" />

            </GridLayout>

            <!-- Note Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_mood_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/mood_note">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_mood_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_mood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/primary_green"
                android:text="@string/save_mood"
                android:textColor="@color/pure_black" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Mood History Title -->
    <TextView
        android:id="@+id/tv_history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/mood_history"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mood_entry_card" />

    <!-- Share Button -->
    <ImageButton
        android:id="@+id/btn_share_mood"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/share"
        android:src="@drawable/ic_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_history_title" />

    <!-- Mood History RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_mood_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_history_title"
        tools:listitem="@layout/item_mood" />

    <!-- Empty State for History -->
    <TextView
        android:id="@+id/tv_empty_mood_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_mood_entries"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_history_title" />

</androidx.constraintlayout.widget.ConstraintLayout>